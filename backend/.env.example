# Copy this file to backend/.env and fill in your values

# Supabase PostgreSQL Database (free tier)
DATABASE_URL="postgresql://postgres:[password]@[host]:5432/[database]"

# NextAuth.js Configuration  
NEXTAUTH_SECRET="your-secret-key-here-generate-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"

# Vercel Blob Storage (for file uploads)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Optional: AWS Configuration (for Step Functions - can be made optional)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your_access_key_id"
# AWS_SECRET_ACCESS_KEY="your_secret_access_key"
# STEP_FUNCTIONS_ARN="your-step-functions-arn"

# Optional: For production deployment
# NEXTAUTH_URL="https://your-production-domain.com"