# Copy this file to backend/.env and fill in your values

# Vercel Postgres Database (get these from your Vercel dashboard)
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:port/database?connect_timeout=15"

# NextAuth.js Configuration  
NEXTAUTH_SECRET="your-secret-key-here-generate-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"

# AWS Configuration (for S3 pre-signed URLs and CDK deployment)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
AWS_ACCOUNT_ID="your_aws_account_id"

# S3 Bucket Configuration (will be created by CDK)
S3_BUCKET_NAME="chimera-videos-${AWS_ACCOUNT_ID}"

# Optional: For production deployment
# NEXTAUTH_URL="https://your-production-domain.com"