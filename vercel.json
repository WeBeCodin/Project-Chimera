{
  "version": 2,
  "name": "project-chimera",
  "buildCommand": "npm run build --workspace=frontend",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm install",
  "functions": {
    "backend/api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ]
}
